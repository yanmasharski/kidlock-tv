<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/admin_background"
    android:orientation="vertical"
    android:padding="48dp">

    <TextView
        android:id="@+id/tvTimeLimitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_time_limit_title"
        android:textColor="@color/admin_text_primary"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTimeLimitDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/onboarding_time_limit_description"
        android:textColor="@color/admin_text_secondary"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layoutPresetContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectedLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/onboarding_time_limit_selected_placeholder"
        android:textColor="@color/admin_text_secondary"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTimeLimitBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_admin_button"
            app:backgroundTint="@null"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:nextFocusLeft="@id/btnTimeLimitBack"
            android:nextFocusRight="@id/btnTimeLimitNext"
            android:nextFocusUp="@id/btnTimeLimitBack"
            android:nextFocusDown="@id/btnTimeLimitBack"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:stateListAnimator="@null"
            android:text="@string/onboarding_back"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnTimeLimitNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_admin_button"
            app:backgroundTint="@null"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:nextFocusLeft="@id/btnTimeLimitBack"
            android:nextFocusRight="@id/btnTimeLimitNext"
            android:nextFocusUp="@id/btnTimeLimitNext"
            android:nextFocusDown="@id/btnTimeLimitNext"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:stateListAnimator="@null"
            android:text="@string/onboarding_next"
            android:textColor="@color/button_text_color"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
