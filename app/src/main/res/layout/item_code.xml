<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:background="@drawable/selector_row_background"
    android:focusable="true"
    android:clickable="true"
    android:stateListAnimator="@animator/focus_scale"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="123456"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:fontFamily="monospace" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+30 min"
        android:textSize="18sp"
        android:textColor="@color/admin_text_secondary"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textSize="16sp"
        android:textColor="@color/status_good"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_button"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_admin_button"
        android:backgroundTint="@null"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:focusable="true" />

</LinearLayout>
